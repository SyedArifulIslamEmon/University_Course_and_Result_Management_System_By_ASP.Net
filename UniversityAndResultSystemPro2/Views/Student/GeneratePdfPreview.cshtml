@using UniversityAndResultSystemPro2.Models.ViewModels

@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GeneratePdf</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body style="width: 21cm; height: 30cm;">
    <div class="head">

        <center>   <img src="~/images/logoUni2.png" style="width: 85px; " /></center>
        <h2 style="text-align: center;">University Course and Result Management System</h2>
        <h4 style="text-align: center;">Result Sheet </h4>
    </div>

    <div class="mainResult ">
        <div>
            <div style ="font-size: 16px;float: left;">
                <table>
                    <tr>
                        <td >Semester </td>
                        <td style=" font-weight: bold"> : 1st</td>
                    </tr>
                    <tr>
                        <td>Name </td>
                        <td style="font-weight: bold"> : @ViewBag.ResultSheet.Name</td>
                    </tr>
                    <tr>
                        <td>Registration No. </td>
                        <td style="font-weight: bold">: @ViewBag.ResultSheet.RegNo</td>
                    </tr>
                    <tr>
                        <td>Email Id</td>
                        <td style="font-weight: bold"> : @ViewBag.ResultSheet.Email </td>
                    </tr>
                    <tr>
                        <td>Department </td>
                        <td style="font-weight: bold"> : @ViewBag.ResultSheet.DeptName</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="margin-left: 9px;">@Html.ActionLink("Generate Pdf", "GeneratePdf", "Student")</td>
                    </tr>
                </table>
            </div>

            <div style="float: right; width: 240px;">

                <h5 style="font-weight: bold; text-align: center;">Grading System</h5>
                <table border="2px solid" style="text-align: center">

                    <thead style="text-align: center;">
                    <tr>
                        <td>Percentage Of Score </td>
                        <td>Letter Grade </td>
                        <td>Quality Point </td>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>95 - 100</td>
                        <td>A+</td>
                        <td>4.00</td>
                    </tr>
                    <tr>
                        <td>90 - 94</td>
                        <td>A</td>
                        <td>3.75</td>
                    </tr>
                    <tr>
                        <td>85 - 89</td>
                        <td>A-</td>
                        <td>3.50</td>
                    </tr>
                    <tr>
                        <td>80 - 84</td>
                        <td>B+</td>
                        <td>3.25</td>
                    </tr>
                    <tr>
                        <td>75 - 79</td>
                        <td>B</td>
                        <td>3.00</td>
                    </tr>
                    <tr>
                        <td>70 - 74</td>
                        <td>B-</td>
                        <td>2.75</td>
                    </tr>
                    <tr>
                        <td>65 - 69</td>
                        <td>C+</td>
                        <td>2.50</td>
                    </tr>
                    <tr>
                        <td>60 - 64</td>
                        <td>C</td>
                        <td>2.25</td>
                    </tr>
                    <tr>
                        <td>55 - 59</td>
                        <td>C-</td>
                        <td>2.00</td>
                    </tr>
                    <tr>
                        <td>50 - 54</td>
                        <td>D+</td>
                        <td>1.75</td>
                    </tr>
                    <tr>
                        <td>45 - 49</td>
                        <td>D</td>
                        <td>1.50</td>
                    </tr>
                    <tr>
                        <td>40 - 44</td>
                        <td>D-</td>
                        <td>1.25</td>
                    </tr>
                    <tr>
                        <td>00 - 39</td>
                        <td>F</td>
                        <td>0.00</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="clearfix"> </div>
        </div>

        <div>
            <table style="width: 20cm; margin-left: 16px; margin-top: 25px;" border="4px solid">
                <thead style="font-weight: bold; text-align: center;">
                <tr>
                    <td>Course Code</td>
                    <td>Name</td>
                    <td>Grade</td>
                </tr>
                </thead>
                <tbody>
                @foreach (CourseResult aCourseResult in ViewBag.ResultSheet.CourseResults)
                {
                    <tr>
                        <td>@aCourseResult.CourseCode</td>
                        <td>@aCourseResult.CourseName</td>
                        <td style="text-align: center">@aCourseResult.Grade</td>
                    </tr>
                }

                </tbody>

            </table>


        </div>
        <table style="float: left; margin-top: 20px;">
            <tr>
                <td>Developed By: IIUC_CODERS </td>
             
            </tr>
        </table>
        <table style="float: right; margin-top: 20px;">
            <tr>
                <td>Printed On: @DateTime.Now</td>
               
            </tr>
        </table>
    </div>


</body>
</html>
