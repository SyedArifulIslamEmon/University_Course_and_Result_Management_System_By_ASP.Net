@using UniversityAndResultSystemPro2.Models.ViewModels

@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GeneratePdf</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body style="margin: 50px;">
    <div class="head">
        <h2 style="text-align:center;">University Course and Result Management System</h2>
        <h4 style="text-align:center;">Result Sheet </h4>
    </div>

    <div class="mainResult ">
        <table style="font-size: 16px; margin-bottom: 15px;">
            <tr>
                <td>Semester </td>
                <td>: 1st</td>
            </tr>
            <tr>
                <td>Name </td>
                <td>: @ViewBag.ResultSheet.Name</td>
            </tr>
            <tr>
                <td>Registration Id </td>
                <td>: @ViewBag.ResultSheet.RegNo</td>
            </tr>
            <tr>
                <td>Email </td>
                <td>: @ViewBag.ResultSheet.Email </td>
            </tr>
            <tr>
                <td>Department </td>
                <td>:  @ViewBag.ResultSheet.DeptName</td>
            </tr>

        </table>

        <table style="width: 860px; margin-left: 185px;" border="4px solid">
            <thead style="font-weight:bold; text-align:center;">
                <tr>
                    <td>Course Code</td>
                    <td>Name</td>
                    <td>Grade</td>
                </tr>
            </thead>
            <tbody>
                @foreach (CourseResult aCourseResult in ViewBag.ResultSheet.CourseResults)
                {
                    <tr>
                        <td>@aCourseResult.CourseCode</td>
                        <td>@aCourseResult.CourseName</td>
                        <td>@aCourseResult.Grade</td>
                    </tr>
                }

            </tbody>

        </table>

    </div>

    <div>
        <div style="float: right;margin-top: 20px;width: 240px;">

            <h5 style="font-weight: bold; text-align: center;">Grading System</h5>
            <table border="2px solid">

                <thead style="text-align:center;">
                    <tr>
                        <td>Percentage Of Score </td>
                        <td>Letter Grade </td>
                        <td>Quality Point </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>80 - 100</td>
                        <td>A+</td>
                        <td>4.00</td>
                    </tr>
                    <tr>
                        <td>75 - 79</td>
                        <td>A</td>
                        <td>3.75</td>
                    </tr>
                    <tr>
                        <td>70 - 74</td>
                        <td>A-</td>
                        <td>3.50</td>
                    </tr>
                    <tr>
                        <td>65 - 69</td>
                        <td>B+</td>
                        <td>3.25</td>
                    </tr>
                    <tr>
                        <td>60 - 64</td>
                        <td>B</td>
                        <td>3.00</td>
                    </tr>
                    <tr>
                        <td>55 - 59</td>
                        <td>B-</td>
                        <td>2.75</td>
                    </tr>
                    <tr>
                        <td>50 - 54</td>
                        <td>C+</td>
                        <td>2.50</td>
                    </tr>
                    <tr>
                        <td>45 - 49</td>
                        <td>C</td>
                        <td>2.25</td>
                    </tr>
                    <tr>
                        <td>40 - 44</td>
                        <td>D</td>
                        <td>2.00</td>
                    </tr>
                    <tr>
                        <td>00 - 39</td>
                        <td>F</td>
                        <td>0.00</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
